<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :recipe_name , required: true , class: "form-control", placeholder: "Recipe Name" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :ingredients , required: true , class: "form-control", placeholder: "Ingredients" %>
  </div>

  <div class="field form-group" >
    <%= form.text_area :instructions , required: true, class: "form-control", placeholder: "Instructions" %>
  </div>

  <div class="field form-group">
    <%= form.label 'Public recipe' %>
    <%= form.check_box :isPublic %>
  </div>
  
  <div class="field form-group" >
  <%= form.file_field :image , required: true ,  class: "form-control" %>
</div>

  <%= form.number_field :user_id, id: :recipe_user_id, type: :hidden, value: current_user.id %>
  <div class="actions">

    <%= form.submit  class: "btn btn-secondary"%>
  </div>
<% end %>
