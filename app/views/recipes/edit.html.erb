<div class = "card">
<div class = "card-header"><h3>Edit Recipe </h3></div>

<div class = "card-body" style="background-color: #E8E8E8">
<%= render 'form', recipe: @recipe %>
</div>
</div>
</div>


<div class="border border-light p-3 mb-4">
<div class = "text-center">
<%= link_to 'Show', @recipe , class: "btn btn-secondary"%> 
<%= link_to 'Back', recipes_path , class: "btn btn-dark" %>
<%= link_to 'Delete', @recipe, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger'%>
</div>
</div>